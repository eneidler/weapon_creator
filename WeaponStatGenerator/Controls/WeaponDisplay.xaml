<UserControl
    x:Class="WeaponStatGenerator.Controls.WeaponDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WeaponStatGenerator.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            HorizontalAlignment="Center"
            FontSize="20"
            Text="{Binding Name}" />
        <TextBlock
            HorizontalAlignment="Center"
            FontSize="16"
            Text="{Binding Type}" />
        <TextBlock
            HorizontalAlignment="Center"
            FontSize="14"
            Text="{Binding DamageType, StringFormat={}Enhancement: {0}}" />
        <TextBlock
            HorizontalAlignment="Center"
            FontSize="14"
            Text="{Binding Damage, StringFormat={}Damage: +{0}}" />
    </StackPanel>
</UserControl>